<div class="author">
    <h1 class="author_heading">Search Results</h1>
</div>

<section class="articles">
    <h2 class="articles__heading">Search Results</h2>

    <ul class="article-ul">
        <% data.forEach(post => { %>
            <li>
                <a href="/post/<%=post._id%>">
                    <span><%= post.title%></span>
                    <span class="articles-list_date"><%=post.createdAt.toDateString()%></span>
                </a>
            </li>
        <% }) %>
    </ul>

    <% if (nextPage !== null) { %>
        <a href="/?page=<%=nextPage%>" class="pagination">View More</a>
    <% } %>
</section>